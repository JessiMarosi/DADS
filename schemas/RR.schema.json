{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "RR.schema.json",
  "title": "DADS Risk Record (RR) - structural schema only",
  "type": "object",
  "required": ["record_type","record_id","created_utc","actor","system","risk","lineage"],
  "properties": {
    "record_type": { "const": "RR" },
    "record_id": { "type": "string", "minLength": 1 },
    "created_utc": { "type": "string", "minLength": 1 },
    "actor": { "type": "string", "minLength": 1 },
    "system": { "type": "string", "minLength": 1 },
    "risk": { "type": "object" },
    "lineage": { "type": "object" }
  },
  "additionalProperties": true
}
